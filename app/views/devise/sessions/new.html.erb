<div class="min-h-screen flex items-center justify-center bg-gradient-to-tr from-blue-100 via-white to-blue-200 px-4">
  <div class="bg-white shadow-2xl rounded-lg w-full max-w-md p-8 border border-blue-100">
    <h2 class="text-3xl font-bold text-center text-blue-700 mb-6">üîê Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <%= f.submit "Log In", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition shadow" %>
    <% end %>

    <div class="text-center text-sm text-gray-600 mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
