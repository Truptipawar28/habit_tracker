<h2 class="text-2xl font-bold mb-6 text-center">Update Your Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2 mt-1" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-yellow-600">
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <small class="text-gray-500">(leave blank if you don't want to change it)</small>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 mt-1" %>
    <% if @minimum_password_length %>
      <small class="text-gray-500"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 mt-1" %>
  </div>

  <div>
    <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
    <small class="text-gray-500">(we need your current password to confirm your changes)</small>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2 mt-1" %>
  </div>

  <div>
    <%= f.submit "Update", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
<% end %>

<hr class="my-6" />

<h3 class="text-lg font-semibold text-red-600 mb-2">Cancel My Account</h3>
<p class="mb-4 text-sm text-gray-600">Unhappy? You can delete your account below.</p>
<div>
  <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded" %>
</div>

<div class="mt-4">
  <%= link_to "Back", root_path, class: "text-blue-600 hover:underline" %>
</div>
