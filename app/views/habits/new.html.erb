<div class="container mx-auto px-4">
  <h1 class="text-2xl font-semibold text-center mb-6">New Habit</h1>

  <div class="glass-effect rounded-3xl p-8 max-w-2xl mx-auto">
    <% if @habit.errors.any? %>
      <div class="mb-6 p-4 bg-red-100 rounded">
        <h2 class="font-semibold text-red-700">
          <%= pluralize(@habit.errors.count, "error") %> prevented this habit from being saved:
        </h2>
        <ul class="list-disc list-inside text-red-600">
          <% @habit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render "form", habit: @habit %>

    <div class="text-center mt-6">
      <%= link_to "Back", habits_path, class: "inline-block text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  </div>
</div>
