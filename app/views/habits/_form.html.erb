<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow rounded-md">
  <h1 class="text-2xl font-semibold mb-6 text-center"><%= action_name.capitalize %> Habit</h1>

  <%= form_with(model: @habit, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
    </div>

    <div class="mb-6">
      <%= form.label :frequency, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :frequency, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200" %>
    </div>

    <%= form.submit "#{action_name.capitalize} Habit", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded" %>
  <% end %>
</div>